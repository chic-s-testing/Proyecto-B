<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Seat</th>
      <th>Day</th>
      <th>Schedule</th>
      <th>Movie</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.seat %></td>
        <td><%= reservation.day %></td>
        <td><%= reservation.function.schedule %></td>
        <td><%= reservation.function.movie.name %></td>
        <td><%= link_to 'Edit Reservation', edit_movie_function_reservation_path(@movie, @function, reservation) %></td>
        <td><%= link_to 'Destroy Reservation', [@movie, @function, reservation], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<td><%= link_to 'Show Function', [@movie, @function] %></td>
<%= link_to 'New Reservation', new_movie_function_reservation_path(@function) %>
